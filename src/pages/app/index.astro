---
import { checkUserCookie, getCookieUser } from "../../lib/auth";

const jwt = Astro.cookies.get(import.meta.env.JWT_NAME)?.value;
if (!jwt) return Astro.redirect("/user/signin");

const cookieUser = await checkUserCookie(jwt);
if (!cookieUser) return Astro.redirect("/user/signin");

const [user] = await getCookieUser(cookieUser.userid, cookieUser.email);
if (!user) return Astro.redirect("/user/signin");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>APP</h1>
    <p>User #{user.userid} = {user.email}</p>
    <p>xx</p>
    <a href="/api/user/logout">Sign out</a>
  </body>
</html>
